<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>הכסף שלי - @ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-right">
                    <p class="site-title">@Html.ActionLink("הכסף שלי", "Index", "Home")</p>
                </div>
                <div class="float-left">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                </div>
            </div>
        </header>
        <div class="float-right" >
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("דף הבית", "Index", "Home")</li>
                    <li>@Html.ActionLink("מי אנחנו", "About", "Home")</li>
                    <li>@Html.ActionLink("צור קשר", "Contact", "Home")</li>
                </ul>
            </nav>
        </div>

        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - הכסף שלי</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>