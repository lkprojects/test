<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="container" style="">
        <div class="header">
            <div class="logo">
                <h1>הכסף שלי</h1>
            </div>
            <div class="UserArea">
                <p id="Hello">שלום <b>ליאור קינג</b> </p>
                <p>
                    <a class="PersonalDetailsLinks" href="#">שנה פרטים אישיים</a>
                    <a class="PersonalDetailsLinks" id="Disconnect" href="#">יציאה מהמערכת</a>
                </p>
            </div>
        </div>
        <div class="TopMenu">
            @Html.Partial("TopMenu")
        </div>
        <br />
        <div id="SideMenu">
            @Html.Partial("SideMenu")
        </div>
        <div id="content" style="">
            <div class="TotalsBarDiv">
                @Html.Partial("TotalsBar")
            </div>
            <br />
            @RenderBody()
        </div>
        <div id="footer">
            הכסף שלי © כל הזכויות שמורות
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
